    "version": "0.2.0",
    "showDevDebugOutput":true,
    "configurations": [
        {
            "name": "Debug Peripheral LBS",
            "cwd": "${workspaceFolder}/nrf/samples/bluetooth/peripheral_lbs",
            "executable": "./build/zephyr/merged.hex",
            "interface": "swd",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "external",
            "gdbTarget": "host.docker.internal:2331",
            "device": "nrf5340",
            "overrideLaunchCommands": [
                "monitor reset 0",
                "-target-download",
                "monitor reset 0"
            ],
            "postLaunchCommands": [
                "file ./build/zephyr/zephyr.elf"
             ],
             "rtos": "zephyr",
             "showDevDebugOutput": "none",
             "runToEntryPoint": "main"
        },
